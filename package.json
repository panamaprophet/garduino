{
  "name": "garduino",
  "version": "1.0.0",
  "description": "home garden controller",
  "scripts": {
    "api:tunnel": "ts-node api/tunnel.ts",
    "api:watch": "nodemon api/index.ts",
    "api:build": "tsc --build api/",
    "api:start": "node dist/api/index.js",
    "api:lint": "eslint -c .eslintrc.json --ext .ts api/",
    "controller:ui:watch": "parcel --no-cache controller/ui/index.html",
    "controller:ui:build": "parcel build --no-source-maps --no-content-hash --dist-dir data/ controller/ui/index.html",
    "controller:ui:upload": "pio run --target buildfs --environment nodemcuv2 && pio run --target uploadfs --environment nodemcuv2",
    "controller:build": "set -a && source .env && set +a && pio run",
    "controller:upload": "set -a && source .env && set +a && pio run --target upload --target monitor --environment nodemcuv2"
  },
  "author": "panamaprophet",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^10.1.1",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "mongodb": "^4.5.0",
    "ramda": "^0.28.0",
    "telegraf": "^4.7.0",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/localtunnel": "^2.0.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.23",
    "@types/ramda": "^0.28.8",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-plugin-jsdoc": "^39.0.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "localtunnel": "^2.0.2",
    "nodemon": "^2.0.15",
    "parcel": "^2.4.1",
    "preact": "^10.7.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
