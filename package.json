{
  "name": "garduino",
  "version": "1.0.0",
  "description": "home garden controller",
  "scripts": {
    "server:watch": "nodemon server/index.ts",
    "server:build": "tsc --build server/",
    "server:start": "node dist/server/index.js",
    "server:lint": "eslint -c .eslintrc.json --ext .ts server/",
    "ui:watch": "parcel controller-ui/index.html",
    "ui:build": "parcel build --no-source-maps --no-content-hash --dist-dir data/ controller-ui/index.html",
    "ui:upload": "pio run --target buildfs --environment nodemcuv2 && pio run --target uploadfs --environment nodemcuv2",
    "controller:build": "pio run",
    "controller:upload": "pio run --target upload --target monitor --environment nodemcuv2"
  },
  "author": "panamaprophet",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^10.1.1",
    "date-fns": "^2.16.1",
    "dotenv": "^10.0.0",
    "gm": "^1.23.1",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "mongodb": "^3.6.2",
    "preact": "^10.6.4",
    "ramda": "^0.27.1",
    "telegraf": "^4.5.2"
  },
  "devDependencies": {
    "@types/gm": "^1.18.9",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/mongodb": "^3.5.32",
    "@types/node": "^17.0.1",
    "@types/ramda": "^0.27.32",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-plugin-jsdoc": "^30.7.7",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "nodemon": "^2.0.15",
    "parcel": "^2.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.0.5"
  }
}
